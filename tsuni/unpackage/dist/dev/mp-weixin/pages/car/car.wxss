.car-wrapper .top {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}
.car-wrapper .middle {
  height: 90rpx;
  border-top: 5rpx solid #eb4450;
  border-bottom: 5rpx solid #eb4450;
  color: #eb4450;
  font-size: 18px;
  line-height: 80rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.car-wrapper .bottom {
  width: 100%;
  display: flex;
  height: 200rpx;
  align-items: center;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}
.car-wrapper .bottom .fubox {
  width: 10%;
}
.car-wrapper .bottom .imgs {
  width: 30%;
}
.car-wrapper .bottom .imgs .imglogo {
  width: 85%;
  height: 140rpx;
}
.car-wrapper .bottom .detail {
  width: 60%;
}
.car-wrapper .bottom .detail .desc {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.car-wrapper .bottom .bottomm {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.car-wrapper .bottom .bottomm .price {
  color: #eb4450;
  font-size: 18px;
  font-weight: 800;
}
.car-wrapper .bottom .bottomm .num {
  width: 50%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.car-wrapper .bottom .bottomm .num .btn {
  width: 10rpx;
  box-sizing: border-box;
  height: 50rpx;
}
.dibu {
  width: 100%;
  height: 110rpx;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  border-top: 2rpx solid darkgrey;
  justify-content: space-between;
  align-items: center;
}
.dibu .left {
  display: flex;
  height: 100%;
  width: 20%;
  align-items: center;
  box-sizing: border-box;
  justify-content: center;
  font-size: 14px;
  padding-left: 20rpx;
}
.dibu .right {
  width: 60%;
  display: flex;
  height: 100%;
  justify-content: end;
}
.dibu .right .leftt {
  height: 100%;
  line-height: 50rpx;
  font-size: 14px;
  box-sizing: border-box;
  padding-right: 10rpx;
  text-align: right;
}
.dibu .right .leftt .spann {
  color: #eb4450;
}
.dibu .right .rightt {
  width: 50%;
  height: 100%;
  background: #eb4450;
  text-align: center;
  color: white;
  font-size: 18px;
  line-height: 100rpx;
  margin-left: 60rpx;
}